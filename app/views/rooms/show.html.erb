<p id="notice"><%= notice %></p>

<div class="chat-room">
  <h1>メッセージ</h1>
  # ルーム内のユーザー表示部分
  <% @RoomUsers.each do |r| %>
  
  <div class="user-name">
  <strong>
      <a class="rooms-user-link" href="/users/<%= r.user.id %>">
        <%= r.user.name %>さん
      </a>
  </strong>

  </div>
<% end %>
<p>ルームに招待する</p>
<%= form_with model: @room, local: true, url: join_user_room_path, method: :pach do |f|%>
  <%= f.text_field :join_user, placeholder: "招待したい人のメールアドレスを入力してください" %>
  <%= f.submit "送信する" %>
<% end %>
#// ルーム内のユーザー表示部分

<hr>
<div class="chats">

  # メッセージ表示部分
  <div class="chat">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="chat-box">
          <div class="chat-text">
            <%= m.content %>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
            <%= m.user.name %>
          </div>
        </div>
      <% end %>
      <%else%>
        <p>メッセージはまだありません</p>
    <% end %>
  </div>
  #// メッセージ表示部分

  # メッセージ投稿フォーム
  <div class="posts">
    <%= form_with model: @message, local: true ,url: room_messages_path(@RoomUsers[0].room_id) do |f| %>
      <%= f.text_field :content, placeholder: "メッセージを入力してください" %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.submit "送信する" %>
    <% end %>
  </div>
  #// メッセージ投稿フォーム

  </div>
</div>
