<!DOCTYPE html>
<html>
  <head>
    <title>TestappChatroom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <ul>
        <li><%= link_to "#{current_user.name}", user_path(current_user.id) %></li>
        <li><%= link_to("投稿一覧", posts_path)%></li>
        <li><%= link_to("新規投稿", new_post_path) %></li>
        <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
      <% else %>
        <li><%= link_to "ユーザー登録", new_user_path %></li>
        <li><%= link_to "ログイン", new_session_path %></li>
      </ul>
    <% end %>
    <%= yield %>
  </body>
</html>
